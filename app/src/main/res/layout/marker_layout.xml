<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewMarker"
        android:layout_width="114dp"
        android:layout_height="89dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@mipmap/camera"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>


    <TextView
        android:id="@+id/textViewMarkerData"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:text="TextView"
        android:layout_alignTop="@+id/imageViewMarker"
        android:layout_toRightOf="@+id/imageViewMarker"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/textViewMarkerDate"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/imageViewMarker"
        android:layout_alignLeft="@+id/textViewMarkerData"
        android:layout_alignStart="@+id/textViewMarkerData" />


</RelativeLayout>